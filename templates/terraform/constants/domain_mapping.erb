// While the domain mapping is setting up the certificate id, GET returns a field
// `pendingManagedCertificateId`, which will eventually be empty when `certificateID`
// is set
func certificateIdDiffSuppress(k, old, new string, d *schema.ResourceData) bool {
	fields := strings.Split(k, ".")
	nestedField := fields[len(fields) - 1]

	// The certificate id was pending before, but is no longer pending
	if nestedField == "pending_managed_certificate_id" && (old != "" && new == "") {
		return true
	}

	return false
}


func sslSettingsDiffSuppress(k, old, new string, d *schema.ResourceData) bool {
	// If certificate id is empty, and ssl management type is `MANUAL`, then
	// ssl settings will not be configured, and ssl_settings block is not returned

	if k == "ssl_settings.#" &&
	    old == "0" && new == "1" &&
	    d.Get("ssl_settings.0.certificate_id") == "" &&
	    d.Get("ssl_settings.0.ssl_management_type") == "MANUAL" {
			return true
		}

	return false
}
