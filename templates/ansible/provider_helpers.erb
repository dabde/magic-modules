<%
    provider_helpers = object.provider_helpers + object.transport.encoders +
                        object.transport.decoders
    provider_helpers = provider_helpers.select { |e| File.file?(e) }
-%>
<% unless provider_helpers.empty? -%>
<%=
  provider_helpers.map do |f|
    if f == provider_helpers.last
      lines(compile(f))
    else
      lines(compile(f), 2)
    end
  end.join
-%>
<% end -%>
